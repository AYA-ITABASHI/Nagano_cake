<div class="container">
  <div class="row justify-content-start">
    <div class="col-sm-2 rounded  m-4">
     <h4 class="text-center", style="background-color: #dcdcdc">商品一覧</h4>（全<%= @items.count %>件)
    </div>
  </div>


  <div class="d-flex flex-wrap">
   <% @items.each do |items| %>
   <div class="item-card col-3 mr-6">
      <%= link_to public_item_path(items.id) do %>
       <%= image_tag items.get_image(232,200) %>
      <% end %>
     </td>
     <div class="item-details   text-left">
      <h6 ><%= items.name %></h6>
      <h6>￥<%= items.price.to_s(:delimited) %></h6>
     </div>
   </div>
   <% end %>
  </div>
</div>
