<h2>会員情報編集</h2>


<%= form_with model: @customer, url: public_customer_path do |f| %>

 <table>
  <tr>
   <th> <%= f.label "名前" %></th>
   <td>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
   </td>
  </tr>

  <tr>
   <th><%= f.label "フリガナ" %></th>
   <td>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field  :first_name_kana %>
   </td>
   <th>
   </th>
  </tr>

  <tr>
   <th><%= f.label "郵便番号" %></th>
   <th>
    <%= f.text_field  :postal_code %>
   </th>
  </tr>

  <tr>
   <th><%= f.label "住所" %></th>
   <th>
    <%= f.text_area  :address %>
   </th>
  </tr>

  <tr>
   <th> <%= f.label "電話番号" %></th>
   <th>
    <%= f.text_field  :telephone_number %>
   </th>
  </tr>

  <tr>
   <th><%= f.label "メールアドレス" %></th>
   <th>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
   </th>
  </tr>

  <tr><th></th>
   <th>
   <div class="actions">
    <%= f.submit "編集内容を保存" %>
   </div>
   <%= link_to "退会する", 
   </th>
  </tr>
 </table>
<% end %>