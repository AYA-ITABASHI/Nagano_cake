<div class="container">
  <div class="row justify-content-start">
    <div class="col-sm-2  rounded  m-4">
     <h5 class="text-center", style="background-color: #dcdcdc">注文情報入力</h5>
    </div>
  </div>

 <%= form_with model:@order, url: public_orders_confirm_path, method: :post do |f| %>
  <div class="row justify-content-start">
   <table>
   <tr>
    <th class="col-sm-5"><h5 class="font-weight-bold">支払方法</h5></th>
   </tr>

   <tr>
    <td class="col-sm-5 mx-4">
     <%= f.radio_button :payment, "credit_card" %>
     <%= f.label :payment_credit_card, "クレジットカード" %>
    </td>
   </tr>
   <tr>
    <td class="col-sm-5 mx-4">
     <%= f.radio_button :payment, "transfer" %>
     <%= f.label :payment_transfer, "銀行振込" %>
    </td>
   </tr>
   </table>
  </div>

  <div class="row justify-content-start">
   <table>
    <tr>
     <th class="col-sm-3"><h5 class="font-weight-bold">お届け先住所</h5></th>
    </tr>
    <tr>
     <th class="col-sm-3">
      <%= f.radio_button :address, "0" %>
      <%= f.label :address, "ご自身の住所" %>
     </th>
    </tr>
    <tr>
     <td class="col-sm-5 ">
      <%= current_customer.address %>
     </td>
    </tr>
    <tr>
     <td class="col-sm-5 " >
      <%= current_customer.last_name %>
      <%= current_customer.first_name %>
     </td>
    </tr>
   </table>
  </div>

   <table>
    <tr>
     <th class="col-sm-5 " >
      <%= f.radio_button :address, "1" %>
      <%= f.label :address, "登録済み住所から選択" %>
     </th>
    </tr>
    <tr>
     <td class="col-sm-5" >
      <%=  f.collection_select :address_id, Address.all, :id, :address_display %>
     </td>
    </tr>
   </table>

  <div class="row justify-content-start">
   <table>
    <tr>
     <th class="col-sm-3" >
      <%= f.radio_button :address, "2" %>
      <%= f.label :address, "新しいお届け先" %>
     </th>
    </tr>
    <tr>

     <th class="col-sm-5 " >
      <%= f.label "郵便番号（ハイフンなし）" %>
     </th>
     <td class="col-sm-5">
      <%= f.text_field :delivery_postal_code, placeholder: "0000000" %>
     </td>
    </tr>
    <tr>
     <th class="col-sm-3 mx-2" >
      <%= f.label "住所" %>
     </th>
     <td class="col-sm-5">
      <%= f.text_area  :delivery_address, placeholder: "東京都渋谷区代々木神園町0-0", style:"width: 450px; height: 30px;" %>
     </td>
    </tr>
    <tr>
     <th class="col-sm-3 mx-2" >
      <%= f.label "宛名" %>
     </th>
     <td class="col-sm-5" >
      <%= f.text_field :delivery_name, placeholder: "令和 道子" %>
     </td>

    </tr>
      <%#= f.hidden_field :customer_id, :value => current_customer.id %>
    <tr>
     <th class="col-sm-3 " >
     <th class="text-center ">
      <%= f.submit "確認画面へすすむ", class: "btn btn-primary btn-lg" %>
     </th>
    </tr>
   </table>
   </div>
 <% end %>

