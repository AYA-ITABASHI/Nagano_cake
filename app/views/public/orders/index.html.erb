<h1>注文履歴一覧</h1>

 <table>
   <thead>
     <tr>
       <th>注文日</th>
       <th>配送先</th>
       <th>注文商品</th>
       <th>支払金額</th>
       <th>ステータス</th>
       <th>注文詳細</th>
     </tr>
   </thead>

   <% @orders.each do |orders| %>
   <tbody>
     <td><%= l orders.created_at, format: :short %></td>
     <td>
      <%= orders.delivery_postal_code %>
      <%= orders.delivery_name %>
     <%= orders.delivery_address %>
     </td>
      <% orders.order_details.each do |details| %>
      <td><%= details.item.name %></td>
      <% end %>
     <td><%= orders.amount_billed %></td>
     <td><%= orders.order_status_i18n %></td>
     <td></td>

     <th><%= link_to "表示する", public_order_path(orders.id) %></th>

   </tbody>
   <% end %>
 </table>
