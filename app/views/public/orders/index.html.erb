<h1>注文履歴一覧</h1>

 <table>
   <thead>
     <tr>
       <th>注文日</th>
       <th>配送先</th>
       <th>注文商品</th>
       <th>支払金額</th>
       <th>ステータス</th>
       <th>注文詳細</th>
     </tr>
   </thead>

   <% @orders.each do |orders| %>
   <tbody>
     <td><%= orders.created_at  %></td>
     <td><%= orders %></td>
     <td><%= orders.cart_items %></td>
     <td><%= orders %></td>
     <td><%= orders.order_status %></td>
     <th><%= link_to "表示する", public_order_path(orders) %></th>
   </tbody>
   <% end %>
 </table>
