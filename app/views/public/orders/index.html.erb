<div class="container">
  <div class="row justify-content-start">
    <div class="col-sm-3  rounded  m-4">
     <h5 class="text-center", style="background-color: #dcdcdc">注文履歴一覧</h5>
    </div>
  </div>

 <table class="table table-bordered">
   <thead style="background-color: #dcdcdc">
     <tr>
       <th class="col-md-1">注文日</th>
       <th class="col-md-3">配送先</th>
       <th class="col-md-2">注文商品</th>
       <th class="col-md-2">支払金額</th>
       <th class="col-md-2">ステータス</th>
       <th class="col-md-2">注文詳細</th>
     </tr>
   </thead>

   <% @orders.each do |orders| %>
   <tbody class= "text-left">
     <td class="col-md-1"><%= l orders.created_at, format: :date %></td>
     <td class="col-md-3">
      <%= orders.delivery_postal_code %>
      <%= orders.delivery_address %></br>
      <%= orders.delivery_name %>
     </td>
     <td>
      <% orders.order_details.each do |details| %>
       <%= details.item.name %></br>
      <% end %>
     </td>
     <td class="col-md-2"><%= orders.amount_billed %></td>
     <td class="col-md-2"><%= orders.order_status_i18n %></td>
     <th class="col-md-2">
      <%= link_to  public_order_path(orders.id), class: "btn btn-primary" do %>
       <%= "表示する" %>
      <% end %>
     </th>

   </tbody>
   <% end %>
 </table>
