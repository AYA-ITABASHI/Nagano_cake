<div class="container">
  <div class="row">
    <div class="col-md-3 text-center rounded my-4 ">
     <h4 style="background-color: #dcdcdc">配送先登録/一覧</h4>
    </div>
  </div>

 <div class="row justify-content-start">
 <%= form_with model:@address, url: public_addresses_path, method: :post do |f| %>
 <table>
  <tr>
   <th class="col-lg-7">郵便番号(ハイフンなし）</th>
   <td class="col-lg-4"><%= f.text_field :postal_code %></td>
  </tr>
  <tr>
   <th class="col-lg-6">住所</th>
   <td  class="col-lg-4"> <%= f.text_area :address,style:"width: 450px; height: 30px;" %> </td>
  </tr>
  <tr>
    <th class="col-lg-6">宛名</th>
    <td  class="col-lg-4"> <%= f.text_field :name %> </td>
    <th class="col-lg-3"> <%= f.submit "新規登録",class: "btn btn-success btn-sm"  %> </th>
  </tr>
 </table>
 <% end %>
 </div>

<div class="row-fluid justify-content-start mt-5">
 <table >
  <thead class="table-secondary table table-bordered">
  <tr>
   <th class="col-md-2" >郵便番号</th>
   <th class="col-md-4">住所 </th>
   <th class="col-md-2">宛名</th>
   <th class="col-md-6"></th>
  </tr>
 </thead>

 <% @addresses.each do |shipping_address| %>
 <tbody class="table table-bordered">
   <tr>
    <td class="col-md-2"><%= shipping_address.postal_code %></td>
    <td class="col-md-4"><%= shipping_address.address%></td>
    <td class="col-md-2"><%= shipping_address.name %></td>
    <%= form_with model:@address, url: public_orders_path do |f| %>
     <%= f.hidden_field :customer_id, :value => @customer_id %>
    <% end %>
    <th class="col-md-6">
     <%= link_to edit_public_address_path(shipping_address),class: "btn btn-success btn-sm" do %>
      <%= "編集する" %>
     <% end %>
     <%= link_to  public_address_path(shipping_address), method: :delete,class: "btn btn-danger btn-sm" do %>
      <%= "削除する" %>
     <% end %>
     </span>
    </th>
   </tr>
  </tbody>
  <% end %>
 </table>
</div>



