<h3>ショッピングカート</h3>

<table>
 <thead>
  <tr>
    <th>商品名</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>
 </thead>
 <% @cart_items.each do |cart_item| %>
  <tbody>
   <tr>
    <td><%= cart_item.item.name %></td>
    <td><%= cart_item.subtotal%></td>
    <td><%= cart_item.item.with_tax_price%></td>
    <% @合計金額 +=  (cart_item.item.price * 1.1).floor * cart_item.amount %>

   </tr>
  </tbody>
 <% end %>
</table>
