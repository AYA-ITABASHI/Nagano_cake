<h3>ショッピングカート</h3><%= link_to "カートを空にする", public_cart_items_destroy_all_path, method: :delete %>

<table>
 <thead>
  <tr>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>
 </thead>
 <% @cart_items.each do |cart_item| %>
  <tbody>
   <tr>
    <td><%= cart_item.item.name %></td>
    <td><%= cart_item.item.with_tax_price%></td>
    <td>
     <%= select_button cart_item.amount, *[1..10] %>
     <%= link_to "変更する", public_cart_items_path, method: :patch %>
    </td>
    <td><%= cart_item.subtotal%></td>
     <% @amount_billed=+ cart_item.subtotal %>
    <th>
     <%= link_to "削除する", public_cart_item_path(cart_item.id), method: :delete %>
    </th>
   </tr>
   <tr>
    <th>合計金額</th>
    <td>
     <%= @amount_billed %>
    </td>
   </tr>
  </tbody>
 <% end %>
</table>
