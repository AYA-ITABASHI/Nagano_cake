<div class="container">
  <div class="row">
    <div class="col-md-2 text-center rounded mt-4 mb-2">
     <h4 style="background-color: #dcdcdc">新規会員登録</h4>
    </div>
  </div>

  <%= form_with model:@customer, url: customer_registration_path do |f| %>
   <%= render "public/shared/error_messages", resource: resource %>

    <table>
     <div class=" form-group row">
     <tr>
      <th class="col-md-1 ">名前</th>
      <td td class="col-md-10  ">
       <!--<label class="col-md-2 col-form-label text-center">-->
        <%=f.label " (姓)" ,class: "px-4" %>
       <!--</label>-->
       <%= f.text_field :last_name,  placeholder: "令和" %>
       <!--<label class="col-md-2 col-form-label text-center">-->
        <%= f.label " (名)"  ,class: "px-4"%>
       <!--</label>-->
       <%= f.text_field :first_name, placeholder: "道子" %>
      </td>
     </tr>
     </div>
     <div class=" form-group row">
     <tr>
      <th class="col-md-1 p-2 ">フリガナ</th>
      <td class="col-md-5 pl-0 ">
       <!--<label class="col-md-2 col-form-label text-center">（セイ）</label>-->
       <%=f.label " (セイ)" ,class: "px-4" %>
       <%= f.text_field :last_name_kana, placeholder: "レイワ" %>
       <!--<label class="col-md-2 col-form-label text-center">（メイ）</label>-->
       <%=f.label " (メイ)" ,class: "px-3" %>
       <%= f.text_field  :first_name_kana, placeholder: "ミチコ" %>
      </td>
     </tr>
     </div>

     <div class=" form-group row">
      <tr>
       <th class="col-md-3">メールアドレス</th>
       <td class="col-md-5 ">
        <div class= "col-md-7 text-center">
         <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
        </div>
       </td>
       </div>
      </tr>
     </div>

     <tr>
      <th class="col-md-2 p-2 ">郵便番号</th>
      <td class="col-md-4 text-left px-8">
       <div class= "col-md-7 text-center">
        <%= f.text_field  :postal_code, placeholder: "0000000" %>
       </div>
      </td>
      </div>
     </tr>

     <tr>
      <th class="col-md-2 p-2 ">住所</th>
      <td class="col-md-4 text-center px-4 ">
       <%= f.text_area  :address, placeholder: "東京都渋谷区代々木神園町0-0",  style:"width: 450px; height: 30px;"  %>
      </td>
      </div>
     </tr>
     <tr>
      <th class="col-md-2 p-2 ">電話番号</th>
      <td class="col-md-4  text-left ">
       <div class= "col-md-7 text-center">
        <%= f.text_field  :telephone_number, placeholder: "00000000000" %>
       </div>
      </td>
      </div>
     </tr>

     <tr>
      <th class="col-md-2 p-2 ">パスワード（６文字以上)</th>
      <td class="col-md-4  text-left ">
       <div class= "col-md-7 text-center">
        <% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
       </div>
      </td>
     </tr>

     <tr>
      <th class="col-md-2 p-2 ">パスワード（確認用)</th>
      <td class="col-md-4  text-left ">
       <div class= "col-md-7 text-center">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
       </div>
      </td>
     </tr>

     <tr>
      <th></th>
      <th class="col-md-1 p-2">
       <div class= "col-md-6 text-center">
        <div class="actions ">
         <input class="btn btn-success btn-lg " type="submit" value="新規登録">
        </div>
       </div>
      </th>
     </tr>
     </div>
 </table>
<% end %>

<div class="col-md-4 text-center rounded mt-4">
 <h4 style="background-color: #dcdcdc">既に登録済みの方</h4>
 <a href="/customers/sign_in">こちら</a>  からログインしてください。
</div>
