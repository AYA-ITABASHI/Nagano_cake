<h2><%= @customer.last_name %><%= @customer.first_name %>の会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>

 <table>
  <tr>
   <th>氏名</th>
   <th>
   <div class="field">

    <%= f.text_field :last_name %>
   </th>
   <th>
    <span>

     <%= f.text_field :first_name %>
    </span>
   </div>
   </th>
  </tr>

  <tr>
   <th>フリガナ</th>
   <th>
   <div class="field">
    <%= f.text_field :last_name_kana %>
   </th>
   <th>
    <span>
    <%= f.text_field  :first_name_kana %>
    </span>
   </div>
   </th>
  </tr>

 <tr><th>郵便番号</th>
  <th>
   <div class="field">

    <%= f.text_field  :postal_code %>
   </div>
   </th>
  </tr>

  <tr><th>住所</th>
   <th>
   <div class="field">
    <%= f.text_area  :adress %>
   </div>
   </th>
  </tr>

  <tr><th>電話番号</th>
   <th>
    <div class="field">
     <%= f.text_field  :telephone_number %>
    </div>
   </th>
  </tr>

  <tr><th></th>
   <th>
   <div class="field">

    <%= f.email_field :email %>
   </div>
   </th>
  </tr>
　<tr>
　<th>
　<%= f.radio_button :is_deleted, :false %>
  <%= f.label :"有効" %>

  <%= f.radio_button :is_deleted, "true" %>
  <%= f.label :is_deleted_method, "退会" %>
　</th>
　</tr>
　<tr>
　<th></th>
　<th>
　 <%= f.submit "変更を保存" %>
  </th>
  </tr>
  </table>
 <% end %>



