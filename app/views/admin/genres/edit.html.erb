<div class="container">
  <div class="row">
    <div class="col-sm-2   rounded  m-4">
     <h5 class="text-center", style="background-color: #dcdcdc">ジャンル編集</h5>
    </div>
  </div>

 <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
  <div class="row">
   <h6 class="p-4"><%= "ジャンル名" %></h6>
   <div class="actions p-4">
     <%= f.text_field :name %>
   </div>
   <div class="actions p-4">
     <%= f.submit "変更を保存", class: "btn btn-success" %>
   </div>
  </div>
 <% end %>