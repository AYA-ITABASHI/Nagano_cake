<div class="container">
  <div class="row">
    <div class="col-sm-3   rounded  m-4">
     <h5 class="text-center", style="background-color: #dcdcdc">ジャンル追加・編集</h5>
    </div>
  </div>
<%= form_with model: @genres, url: '/admin/genres', method: :post do |f| %>

 <div class="row">
  <h6 class="mt-2 p-4">ジャンル名</h6>
   <div class="p-4">
    <%= f.text_field:name,  placeholder:"ジャンル名" %>
   </div>
   <div class="actions p-4">
   <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
   </div>
   <% end %>
 </div>

 <div class="row-fluid justify-content-start mt-6">
  <table >
    <thead >
     <tr style="background-color: #dcdcdc">
      <th class="col-md-8 text-left" >ジャンル名</th>
      <th></th>
     </tr>
    </thead>

    <% @genre.each do |genre| %>
    <tbody>
     <tr class=" border-bottom border-secondary">
      <td class="col-md-2 p-2"><%= genre.name %></td>
      <td class="col-md-4 p-2"><%= link_to "編集する", edit_admin_genre_path(genre.id),class: "btn btn-success " %></td>
     </tr>
    </tbody>
    <% end %>
   </table>
 </div>
</div>






