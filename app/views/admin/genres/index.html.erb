
 <h1 >ジャンル追加・編集</h1>

<%= form_with model:@genre, url: '/admin/genres', method: :post do |f| %>


 <h5>ジャンル名</h5>
 <%= f.text_field :name %>
<div class="actions">
 <%= f.submit "新規登録" %>
</div>
<% end %>



 <table>
 <thead>
 <tr>
  <th ></th>
  <th >ジャンル名
  </th>
 </tr>
 </thead>

 <tbody>
　<% @genre.each do |genre| %>
 　<tr>
    <td><span class="space"><%= genre.name %></span></td>
    <td></td>
    <td><span class="space"><%= link_to "編集", edit_admin_genre_path(genre.id) %></td></span>

   </tr>
　</tbody>
 <% end %>
 </table>
</div>






