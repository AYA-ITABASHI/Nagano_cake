<div class="container">
  <div class="row justify-content-start">
    <div class="col-sm-3  rounded  m-4">
     <h4 class="text-center", style="background-color: #dcdcdc">商品詳細</h4>
    </div>
  </div>
  <div class="row justify-content-center" >
   <div class="col-lg-4">
    <%= image_tag @item.get_image(300,500) %>
   </div>
   <div class="col-lg-8">
   <table>
    <tr>
     <th class="col-md-4 m-2">商品名</th>
     <td class="pb-3"><%= @item.name %></td>
    </tr>
    <tr>
     <th class="col-md-4 m-2">商品説明</th>
     <td class="py-4"><%= @item.introduction %></td>
    </tr>
    <tr>
     <th class="col-md-4 m-2">ジャンル</th>
     <td class="py-4"><%= @item.genre.name %></td>
    </tr>
    <tr>
     <th class="col-md-4 m-2">
      税込価格
      (税抜価格）
     </th>
     <td class="py-4">
      <%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円
     </td>
    </tr>
    <tr>
     <th class="col-md-4 m-2">販売ステータス</th>
     <td class="font-weight-bold py-4">
      <% if @item.is_active? %>
       <p class="text-success m-0" >販売中</p>
      <% else %>
       <p class="text-secondary m-0">販売停止中</p>
      <% end %>
     </td>
    </tr>
   </div>
  </table>
  </div>
  <div class="actions">
    <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success btn-lg" %>
  </div >