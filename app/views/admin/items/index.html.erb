<h1>商品一覧</h1>

<table>
<thead>
 <tr>
  <th>商品</th>
  <th>商品名</th>
  <th>税抜価格</th>
  <th>ジャンル</th>
  <th>ステータス</th>
 </tr>
 </thead>

<% @items.each do |item| %>
<tbody>
 <tr>
  <td>
   <%= image_tag item.get_image(100,100) %>
  </td>
  <td>
   <%= item.name %>
  </td>
  <td>
   <%= item.price %>
  </td>

  <td>
   <%= item.genre.name %>
  </td>

  <td><% if item.is_active? %>
      販売中
      <% else %>
      販売停止
      <% end %>
  </td>
 </tr>
</tbody>
<% end %>
