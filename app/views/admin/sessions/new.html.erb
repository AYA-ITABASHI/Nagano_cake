<div class="container">
  <div class="row">
    <div class="col-md-2  rounded px-0 my-5">
     <h4 style="background-color: #dcdcdc">管理者ログイン</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12" >
        <%= form_with model:Admin, url: admin_session_path do |f| %>
        <div class="field">
            <div class="row justify-content-center">
             <label for="email" class="col-md-2 col-form-label">メールアドレス</label>
             <div>
              <%= f.text_field :email,  autocomplete: "email", class: "col-md-9 ", style:"width: 480px;" %>
             </div>
            </div>
        </div>
        <div class="field ">
          <div class="row justify-content-center">
           <label for="email" class="col-md-2 col-form-label">パスワード</label>
           <div>
            <%= f.password_field :password, autocomplete: "current-password",class: "col-md-9 ", style:"width: 480px;"  %>
           </div>
          </div>
        </div>
        <div class="row justify-content-end">
         <div class="col-md-8 d-flex justify-content-start ">
         <div class="actions ">
          <input class="btn btn-primary " type="submit" value=" ログイン ">
         </div>
         </div>
        <% end %>
        </div>
    </div>
  </div>

</div>

